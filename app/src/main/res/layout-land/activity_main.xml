<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:autoText="false"
        android:background="@color/gray"
        android:ems="10"
        android:gravity="right"
        android:paddingTop="10pt"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:textStyle="normal" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/button4"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="cleanUp"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTintMode="add" />

            <Button
                android:id="@+id/pm"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numpress"
                android:text="+/-"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTintMode="add" />

            <Button
                android:id="@+id/button6"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="percent"
                android:text="%"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTintMode="add" />

            <Button
                android:id="@+id/budiv"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="operation"
                android:text="/"
                android:textColor="@color/white"
                android:textColorHint="@color/design_default_color_background"
                android:textSize="16sp"
                app:backgroundTint="@color/orange"
                app:backgroundTintMode="add" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bu7"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numpress"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTintMode="add" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numpress"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTintMode="add" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numpress"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTintMode="add" />

            <Button
                android:id="@+id/bumul"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="operation"
                android:text="X"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@color/orange"
                app:backgroundTintMode="add" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bu4"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numpress"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTintMode="add" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numpress"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTintMode="add" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numpress"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTintMode="add" />

            <Button
                android:id="@+id/busub"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="operation"
                android:text="_"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@color/orange"
                app:backgroundTintMode="add" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bu1"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numpress"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTintMode="add" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numpress"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTintMode="add" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numpress"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTintMode="add" />

            <Button
                android:id="@+id/buplus"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="operation"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@color/orange"
                app:backgroundTintMode="add" />


        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bu0"
                android:layout_width="40pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="2"
                android:background="@color/whiteback"
                android:onClick="numpress"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTintMode="add" />

            <Button
                android:id="@+id/budot"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="numpress"
                android:text="."
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTintMode="add" />

            <Button
                android:id="@+id/buequal"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="finalOp"
                android:text="="
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@color/orange"
                app:backgroundTintMode="add" />
        </LinearLayout>
    </TableLayout>

</LinearLayout>